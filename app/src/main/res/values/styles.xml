<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/cyan</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gotu_regular</item>
    </style>
    <!-- Splash Screen -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="alert_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:windowEnterAnimation">@anim/anim_enter_dialog</item>
        <item name="android:windowExitAnimation">@anim/anim_exit_dialog</item>
    </style>

    <!--
    <style name="spinner_style" >
        <item name="android:background">@drawable/spinner_bg</item>
    </style>
    -->

</resources>
