<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ly_flavor"
    android:background="@color/cyan"
    android:orientation="vertical"
    tools:context=".createIcecream.FlavorsFragment">

    <!-- androidx.core.widget.NestedScrollView -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/btBackToPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="64dp"
            android:backgroundTint="@color/cyan"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/txtFlavor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sabores"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:gravity="center">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="Elija sabor"
            android:background="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbTraditional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Especiales"
                android:fontFamily="@font/gotu_regular"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"/>

            <RadioButton
                android:id="@+id/rbLicour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Licor"
                android:fontFamily="@font/gotu_regular"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"/>

            <RadioButton
                android:id="@+id/rbSpecial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Especiales"
                android:fontFamily="@font/gotu_regular"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ICONO DE MÁS -->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/cyan"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/choosenFlavors"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:contentDescription="lista de exámenes"
                android:scrollbars="vertical"/>

        </LinearLayout>

        <Button
            android:id="@+id/btContinue"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Siguiente"
            android:background="@drawable/round_shape"/>

    </LinearLayout>

</LinearLayout>